                <!--app:fb_defaultColor="#731010"-->
                <!--app:fb_disabledColor="@android:color/transparent"-->
                <!--app:fb_disabledTextColor="#011ffe"-->
                <!--app:fb_focusColor="#FFFE9C01"-->
                <!--app:fb_radius="2dp"-->
                <!--app:fb_textColor="#ffffff"-->
                <!--app:fb_textSize="14sp" />-->

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_facebook_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textStyle="italic"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#3b5998"
                    app:fb_focusColor="#5577bd"
                    app:fb_fontIconResource="@string/icon_like"
                    app:fb_fontIconSize="15sp"
                    app:fb_iconPosition="right"
                    app:fb_radius="30dp"
                    app:fb_text="Like my facebook page"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_facebook_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#3b5998"
                    app:fb_focusColor="#5577bd"
                    app:fb_fontIconResource="@string/icon_share"
                    app:fb_fontIconSize="25sp"
                    app:fb_iconPaddingLeft="20dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconPosition="right"
                    app:fb_radius="30dp"
                    app:fb_text="Share the link"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_facebook_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#3b5998"
                    app:fb_focusColor="#5577bd"
                    app:fb_fontIconResource="@string/icon_follow"
                    app:fb_fontIconSize="25sp"
                    app:fb_iconPosition="right"
                    app:fb_radius="30dp"
                    app:fb_text="Follow Mehdi Sakout"
                    app:fb_textColor="#FFFFFF" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/section_socialnetworks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:minHeight="200dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_android"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#55acee"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/twitter"
                        app:fb_radius="64dp"
                        app:fb_textColor="#FFFFFF" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_dropbox"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#007ee5"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/dropbox"
                        app:fb_radius="64dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sn_pos2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_instagram"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#3f729b"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/instagram"
                        app:fb_radius="64dp" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_sound"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#ff8800"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/soundcloud"
                        app:fb_radius="64dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_gplus"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#dd4b39"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/gplus"
                        app:fb_radius="64dp" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_facebook"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        app:fb_defaultColor="#000000"
                        app:fb_focusColor="#313131"
                        app:fb_iconPaddingLeft="0dp"
                        app:fb_iconPaddingRight="0dp"
                        app:fb_iconResource="@drawable/github"
                        app:fb_radius="64dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_spotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222326"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_spotify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    app:fb_defaultColor="#7ab800"
                    app:fb_focusColor="#9bd823"
                    app:fb_fontIconResource="&#xf04b;"
                    app:fb_iconPosition="left"
                    app:fb_radius="30dp"
                    app:fb_text="SHUFFLE PLAY"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_spotify_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    app:fb_defaultColor="#7ab800"
                    app:fb_focusColor="#9bd823"
                    app:fb_fontIconResource="&#xf04c;"
                    app:fb_iconPosition="left"
                    app:fb_radius="30dp"
                    app:fb_text="PAUSE"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_spotify_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    app:fb_borderColor="#88898c"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#222326"
                    app:fb_focusColor="#424243"
                    app:fb_radius="30dp"
                    app:fb_text="FOLLOW"
                    app:fb_textColor="#dfe0d9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55acee"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_twitter_follow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    app:fb_borderColor="#FFF"
                    app:fb_borderWidth="2dp"
                    app:fb_defaultColor="#55acee"
                    app:fb_focusColor="#8cc9f8"
                    app:fb_iconResource="@drawable/twitter"
                    app:fb_radiusBottomRight="10dp"
                    app:fb_radiusTopLeft="10dp"
                    app:fb_text="Follow me on Twitter"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_twitter_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="2dp"
                    app:fb_defaultColor="#55acee"
                    app:fb_focusColor="#8cc9f8"
                    app:fb_fontIconResource="@string/icon_user"
                    app:fb_fontIconSize="25sp"
                    app:fb_iconPosition="top"
                    app:fb_text="2145 followers"
                    app:fb_textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff5f69"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#ff5f69"
                    app:fb_focusColor="#ff838b"
                    app:fb_radius="30dp"
                    app:fb_text="Create an account"
                    app:fb_textColor="#FFFFFF" />

                <com.livinglife.custombutton_generate.CustomViewLayout
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    app:fb_borderColor="#FFFFFF"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#ff5f69"
                    app:fb_focusColor="#ff838b"
                    app:fb_fontIconResource="@string/icon_user"
                    app:fb_iconPosition="left"
                    app:fb_radius="30dp"
                    app:fb_text="Login"
                    app:fb_textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="2dp"
                        app:fb_defaultColor="#3b414f"
                        app:fb_focusColor="#8cc9f8"
                        app:fb_fontIconResource="@string/icon_download"
                        app:fb_fontIconSize="25sp"
                        app:fb_iconPosition="top"
                        app:fb_radius="10dp"
                        app:fb_text="Download the file"
                        app:fb_textColor="#FFFFFF" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="2dp"
                        app:fb_defaultColor="#3b414f"
                        app:fb_focusColor="#8cc9f8"
                        app:fb_fontIconResource="@string/icon_upload"
                        app:fb_fontIconSize="25sp"
                        app:fb_iconPosition="bottom"
                        app:fb_radius="10dp"
                        app:fb_text="Upload"
                        app:fb_textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="2dp"
                        app:fb_defaultColor="#40a75a"
                        app:fb_focusColor="#8cc9f8"
                        app:fb_fontIconResource="@string/icon_user"
                        app:fb_fontIconSize="30sp"
                        app:fb_iconPosition="left"
                        app:fb_radius="10dp"
                        app:fb_text="Send"
                        app:fb_textColor="#FFFFFF" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_send_disabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:enabled="false"
                        android:padding="10dp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="2dp"
                        app:fb_defaultColor="#40a75a"
                        app:fb_disabledColor="#e4e4e4"
                        app:fb_focusColor="#8cc9f8"
                        app:fb_fontIconResource="@string/icon_user"
                        app:fb_fontIconSize="30sp"
                        app:fb_iconPosition="left"
                        app:fb_radius="10dp"
                        app:fb_text="Send Disabled"
                        app:fb_textColor="#FFFFFF" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_android_prefix"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:text="@string/android_prefix"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="2dp"
                        app:fb_defaultColor="#40a75a"
                        app:fb_disabledColor="#e4e4e4"
                        app:fb_focusColor="#8cc9f8"
                        app:fb_radius="10dp"
                        app:fb_textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        app:fb_borderColor="#FFFFFF"
                        app:fb_borderWidth="0dp"
                        app:fb_defaultColor="#d86262"
                        app:fb_focusColor="#2e5071"
                        app:fb_fontIconResource="@string/icon_mute"
                        app:fb_fontIconSize="25dp"
                        app:fb_iconPosition="right"
                        app:fb_radius="30dp"
                        app:fb_text="Mute"
                        app:fb_textColor="#ffffff" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:padding="10dp"
                        app:fb_defaultColor="#7ed862"
                        app:fb_focusColor="#2e5071"
                        app:fb_fontIconResource="@string/icon_answer"
                        app:fb_fontIconSize="25dp"
                        app:fb_iconPosition="right"
                        app:fb_radius="30dp"
                        app:fb_text="Answer the call"
                        app:fb_textColor="#ffffff" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55acee"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#ff000000"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_ghost_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:padding="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:fb_borderColor="#ffe7e6e2"
                        app:fb_borderWidth="2dp"
                        app:fb_focusColor="#fffffefa"
                        app:fb_fontIconResource="@string/icon_creditcard"
                        app:fb_fontIconSize="15sp"
                        app:fb_ghost="true"
                        app:fb_iconPosition="right"
                        app:fb_radius="40dp"
                        app:fb_text="Deposit"
                        app:fb_textColor="#ffffff" />

                    <com.livinglife.custombutton_generate.CustomViewLayout
                        android:id="@+id/btn_ghost_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:padding="15dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        app:fb_borderColor="#7ed862"
                        app:fb_borderWidth="2dp"
                        app:fb_focusColor="#ffa8f192"
                        app:fb_fontIconResource="@string/icon_envelope"
                        app:fb_fontIconSize="15sp"
                        app:fb_ghost="true"
                        app:fb_iconPosition="right"
                        app:fb_radius="25dp"
                        app:fb_text="Contact"
                        app:fb_textColor="#ffa8f192" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</layout>